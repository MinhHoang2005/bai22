@model bai22.Models.Models_HinhTronModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="TinhToan" method="post">
    <label for="BanKinh">Bán kính: </label>
    <input asp-for="BanKinh" />
    <input type="submit" value="Tính" />
</form>

@if (Model != null && Model.BanKinh > 0)
{
    <div>
        Diện tích: @Model.DienTich
        <br />
        Chu vi: @Model.ChuVi
        <br />
        Đường kính: @Model.DuongKinh
    </div>
}
else if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}
